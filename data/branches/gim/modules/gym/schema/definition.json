{
  "version": 1,
  "moduleId": "gym",
  "description": {
    "en": "Gym Management System - Memberships, Services, and POS",
    "ar": "نظام إدارة الجيم - الاشتراكات والخدمات ونقاط البيع"
  },
  "tables": {
    "gym_config": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "gym_name": { "type": "json" },
        "currency": { "type": "text" },
        "timezone": { "type": "text" },
        "reminder_days_before": { "type": "integer" },
        "business_hours": { "type": "json" },
        "contact_info": { "type": "json" },
        "created_at": { "type": "timestamp" },
        "updated_at": { "type": "timestamp" }
      }
    },
    "staff": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "name": { "type": "json" },
        "role": { "type": "text" },
        "email": { "type": "text" },
        "phone": { "type": "text" },
        "hire_date": { "type": "date" },
        "status": { "type": "text" },
        "salary": { "type": "decimal" },
        "created_at": { "type": "timestamp" },
        "updated_at": { "type": "timestamp" }
      }
    },
    "gym_member": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "member_code": { "type": "text" },
        "full_name": { "type": "json" },
        "email": { "type": "text" },
        "phone": { "type": "text" },
        "date_of_birth": { "type": "date" },
        "gender": { "type": "text" },
        "address": { "type": "json" },
        "emergency_contact": { "type": "json" },
        "medical_notes": { "type": "json" },
        "profile_photo": { "type": "text" },
        "joined_date": { "type": "date" },
        "status": { "type": "text" },
        "created_at": { "type": "timestamp" },
        "updated_at": { "type": "timestamp" }
      }
    },
    "membership_plan": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "plan_name": { "type": "json" },
        "description": { "type": "json" },
        "duration_days": { "type": "integer" },
        "price": { "type": "decimal" },
        "features": { "type": "json" },
        "is_active": { "type": "boolean" },
        "display_order": { "type": "integer" },
        "created_at": { "type": "timestamp" },
        "updated_at": { "type": "timestamp" }
      }
    },
    "membership_subscription": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "member_id": { "type": "text" },
        "plan_id": { "type": "text" },
        "start_date": { "type": "date" },
        "end_date": { "type": "date" },
        "status": { "type": "text" },
        "amount_paid": { "type": "decimal" },
        "payment_method": { "type": "text" },
        "auto_renew": { "type": "boolean" },
        "notes": { "type": "json" },
        "created_by": { "type": "text" },
        "created_at": { "type": "timestamp" },
        "updated_at": { "type": "timestamp" }
      }
    },
    "gym_service": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "service_name": { "type": "json" },
        "description": { "type": "json" },
        "category": { "type": "text" },
        "price": { "type": "decimal" },
        "duration_minutes": { "type": "integer" },
        "is_active": { "type": "boolean" },
        "requires_trainer": { "type": "boolean" },
        "max_participants": { "type": "integer" },
        "created_at": { "type": "timestamp" },
        "updated_at": { "type": "timestamp" }
      }
    },
    "service_transaction": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "member_id": { "type": "text" },
        "service_id": { "type": "text" },
        "staff_id": { "type": "text" },
        "transaction_date": { "type": "timestamp" },
        "amount": { "type": "decimal" },
        "payment_method": { "type": "text" },
        "status": { "type": "text" },
        "notes": { "type": "json" },
        "created_by": { "type": "text" },
        "created_at": { "type": "timestamp" }
      }
    },
    "payment_transaction": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "reference_type": { "type": "text" },
        "reference_id": { "type": "text" },
        "member_id": { "type": "text" },
        "amount": { "type": "decimal" },
        "payment_method": { "type": "text" },
        "payment_date": { "type": "timestamp" },
        "status": { "type": "text" },
        "receipt_number": { "type": "text" },
        "notes": { "type": "json" },
        "processed_by": { "type": "text" },
        "created_at": { "type": "timestamp" }
      }
    },
    "attendance_log": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "member_id": { "type": "text" },
        "check_in_time": { "type": "timestamp" },
        "check_out_time": { "type": "timestamp" },
        "duration_minutes": { "type": "integer" },
        "notes": { "type": "text" },
        "created_at": { "type": "timestamp" }
      }
    },
    "reminder": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "member_id": { "type": "text" },
        "subscription_id": { "type": "text" },
        "reminder_type": { "type": "text" },
        "reminder_date": { "type": "date" },
        "message": { "type": "json" },
        "status": { "type": "text" },
        "sent_at": { "type": "timestamp" },
        "created_at": { "type": "timestamp" }
      }
    },
    "revenue_report": {
      "fields": {
        "id": { "type": "text", "primaryKey": true },
        "report_date": { "type": "date" },
        "report_type": { "type": "text" },
        "total_revenue": { "type": "decimal" },
        "membership_revenue": { "type": "decimal" },
        "service_revenue": { "type": "decimal" },
        "payment_breakdown": { "type": "json" },
        "metrics": { "type": "json" },
        "created_at": { "type": "timestamp" }
      }
    }
  }
}
